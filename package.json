{
  "name": "@microsoft/beachball-actions-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/beachball-actions.git"
  },
  "scripts": {
    "build": "lage build --verbose",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.ts --cache",
    "bundle": "lage bundle --verbose",
    "prepare": "husky",
    "syncpack:check": "syncpack list-mismatches",
    "syncpack:update": "syncpack fix-mismatches"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@tsconfig/node24": "^24.0.0",
    "@types/node": "^24.0.0",
    "beachball": "^2.63.0",
    "esbuild": "^0.27.2",
    "esbuild-plugin-license": "^1.2.3",
    "eslint": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^17.0.0",
    "husky": "^9.0.0",
    "lage": "^2.2.3",
    "lint-staged": "^16.0.0",
    "nano-spawn": "^2.0.0",
    "prettier": "^3.0.0",
    "syncpack": "^14.0.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.34.1"
  },
  "workspaces": [
    "batch-runs",
    "check-for-modified-files",
    "install-beachball",
    "should-release",
    "packages/*"
  ],
  "lint-staged": {
    "*.!(js|ts)": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "syncpack": {
    "dependencyTypes": [
      "dev",
      "prod"
    ],
    "versionGroups": [
      {
        "label": "internal deps use workspace protocol",
        "dependencies": [
          "@microsoft/beachball-actions-*"
        ],
        "packages": [
          "**"
        ],
        "specifierTypes": [
          "workspace-protocol"
        ]
      }
    ]
  }
}
